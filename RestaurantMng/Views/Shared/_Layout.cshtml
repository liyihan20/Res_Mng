<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>会所后台管理系统</title>
    <link href="@Url.Content("~/Content/imgs/42.ico")" rel="shortcut icon" type="image/x-icon" />
    <link href="@Url.Content("~/Content/themes/metro-blue/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/fontcss/font-awesome.min.css")" type="text/css">

    @RenderSection("CSS", false)

    <script src="@Url.Content("~/Scripts/jquery-1.11.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui-1.4.5.min.js")" type="text/javascript"></script>

    @RenderSection("Script", false)

    <script type="text/javascript">
        //设置日期控件显示格式：yyyy-mm-dd
        if ($.fn.datebox) {
            $.fn.datebox.defaults.formatter = function (date) {
                var y = date.getFullYear();
                var m = date.getMonth() + 1;
                var d = date.getDate();
                return y + '-' + (m < 10 ? ('0' + m) : m) + '-' + (d < 10 ? ('0' + d) : d);
            };
            $.fn.datebox.defaults.parser = function (date) {
                if (!date) return new Date();
                var ss = (date.split('-'));
                var y = parseInt(ss[0], 10);
                var m = parseInt(ss[1], 10);
                var d = parseInt(ss[2], 10);
                if (!isNaN(y) && !isNaN(m) && !isNaN(d)) {
                    return new Date(y, m - 1, d);
                } else {
                    return new Date();
                }
            };
        }
        function showMsg(msg) {
            $.messager.show({
                title: '提示',
                msg: msg
            });
        }
    </script>
</head>
<body style="padding:0;margin:0">
    @RenderBody()
</body>
</html>
